<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    
    <!-- base playback button -->
    <button name="musicbutton">
        <area>0,0,64,64</area>
        <statetype name="buttonstate">
            <area>0,0,100%,100%</area>
            <state name="active">
                <imagetype name="icon">
                    <area>0,0,64,64</area>
                </imagetype>
                <alpha>100</alpha>
            </state>
            <state name="selected" from="active">
                <alpha>200</alpha>
            </state>
            <state name="disabled" from="active">
                <alpha>50</alpha>
            </state>
            <state name="pushed" from="selected"/>
        </statetype>
    </button>

    <button name="musicplaybutton" from="musicbutton">
        <statetype name="buttonstate">
            <state name="active">
                <imagetype name="icon">
                    <filename>images/icons/Play.png</filename>
                </imagetype>
                <alpha>100</alpha>
            </state>
            <state name="selected" from="active">
                <alpha>255</alpha>
            </state>
            <state name="disabled" from="active">
                <alpha>50</alpha>
            </state>
            <state name="pushed" from="selected"/>
        </statetype>
    </button>

