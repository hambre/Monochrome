<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="notification">
        <area>-1,0,700,300</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-250" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <group name="decoration" from="basepopupdecoration"/>
        <textarea name="title" from="basepopuptitletext"/>
        <shape name="bottomseparator" from="baseseparator_h">
            <position>0,100%</position>
        </shape>
        <group name="content">
            <area>25,75,-25,210</area>
            <group name="text">
                <area>0,0,100%,100%</area>
                <textarea name="origin" from="basetext_s">
                    <area>0,0,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="description" from="basedescriptiontext" depends="extra">
                    <area>0,50,100%,50</area>
                </textarea>
                <textarea name="description2" from="basedescriptiontext" depends="!extra">
                    <area>0,50,100%,100</area>
                    <template>%DESCRIPTION%</template>
                </textarea>
                <textarea name="extra" from="basetext_m">
                    <area>0,100,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="progress_text" from="basetext_s">
                    <area>0,155,100%,32</area>
                    <alpha>150</alpha>
                    <align>center</align>
                </textarea>
                <progressbar name="progress" from="baseprogress_s">
                    <area>0,192,100%,12</area>
                </progressbar>
            </group>
        </group>
    </window>

    <!--====================================================================-->

    <window name="notification-image">
        <area>-1,0,900,300</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-250" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <group name="decoration" from="basepopupdecoration"/>
        <textarea name="title" from="basepopuptitletext"/>
        <shape name="bottomseparator" from="baseseparator_h">
            <position>0,100%</position>
        </shape>
        <group name="content">
            <area>25,75,-25,210</area>
            <group name="graphics">
                <area>5,5,200,200</area>
                <imagetype name="image" depends="!mediastate&amp;!errorstate">
                    <area>0,0,100%,100%</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <statetype name="mediastate">
                    <area>0,0,100%,100%</area>
                    <state name="ok"/>
                    <state name="noartwork">
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/ArtworkHuge.png</filename>
                        </imagetype>
                    </state>
                </statetype>
                <statetype name="errorstate">
                    <area>0,0,100%,100%</area>
                    <state name="ok"/>
                    <state name="error">
                        <area>0,0,100%,100%</area>
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/ErrorHuge.png</filename>
                        </imagetype>
                    </state>
                    <state name="warning">
                        <area>0,0,100%,100%</area>
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/WarningHuge.png</filename>
                        </imagetype>
                    </state>
                    <state name="check" from="ok">
                    </state>
                    <state name="busy">
                        <area>0,0,100%,100%</area>
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/BusyHuge.png</filename>
                        </imagetype>
                    </state>
                </statetype>
            </group>
            <group name="text">
                <area>235,0,100%,100%</area>
                <textarea name="origin" from="basetext_s">
                    <area>0,0,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="description" from="basedescriptiontext" depends="extra">
                    <area>0,50,100%,50</area>
                </textarea>
                <textarea name="description2" from="basedescriptiontext" depends="!extra">
                    <area>0,50,100%,100</area>
                    <template>%DESCRIPTION%</template>
                </textarea>
                <textarea name="extra" from="basetext_m">
                    <area>0,100,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="progress_text" from="basetext_s">
                    <area>0,155,100%,32</area>
                    <alpha>150</alpha>
                    <align>center</align>
                </textarea>
                <progressbar name="progress" from="baseprogress_s">
                    <area>0,192,100%,12</area>
                </progressbar>
            </group>
        </group>
    </window>

    <!--====================================================================-->

    <window name="notification-full">
        <shape name="background" from="basebackground">
            <alpha>225</alpha>
        </shape>
        <shape name="topseparator" from="baseseparator_h">
            <position>0,50%-155</position>
        </shape>
        <group name="content">
            <area>50%-500,50%-130,1000,260</area>
            <group name="graphics">
                <area>5,5,250,250</area>
                <imagetype name="image" depends="!mediastate&amp;!errorstate">
                    <area>0,0,100%,100%</area>
                    <preserveaspect>true</preserveaspect>
                    <filename>images/icons/ArtworkHuge.png</filename>
                </imagetype>
                <statetype name="mediastate">
                    <area>0,0,100%,100%</area>
                    <state name="ok"/>
                    <state name="noartwork">
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/ArtworkHuge.png</filename>
                        </imagetype>
                    </state>
                </statetype>
                <statetype name="errorstate">
                    <area>0,0,100%,100%</area>
                    <state name="ok"/>
                    <state name="error">
                        <area>0,0,100%,100%</area>
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/ErrorHuge.png</filename>
                        </imagetype>
                    </state>
                    <state name="warning">
                        <area>0,0,100%,100%</area>
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/WarningHuge.png</filename>
                        </imagetype>
                    </state>
                    <state name="check" from="ok">
                    </state>
                    <state name="busy">
                        <area>0,0,100%,100%</area>
                        <imagetype name="icon" from="baseicon">
                            <area>0,0,100%,100%</area>
                            <filename>images/icons/BusyHuge.png</filename>
                        </imagetype>
                    </state>
                </statetype>
            </group>
            <group name="text">
                <area>300,0,100%,100%</area>
                <textarea name="origin" from="basetext_s">
                    <area>0,0,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="title" from="basepopuptitletext">
                    <align>left,vcenter</align>
                    <area>0,50,100%,40</area>
                    <alpha>255</alpha>
                </textarea>
                <textarea name="description" from="basedescriptiontext" depends="extra">
                    <area>0,100,100%,40</area>
                </textarea>
                <textarea name="description2" from="basedescriptiontext" depends="!extra">
                    <area>0,50,100%,100</area>
                    <template>%DESCRIPTION%</template>
                </textarea>
                <textarea name="extra" from="basetext_m">
                    <area>0,150,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="progress_text" from="basetext_s">
                    <area>0,210,100%,32</area>
                    <alpha>150</alpha>
                    <align>center</align>
                </textarea>
                <progressbar name="progress" from="baseprogress_s">
                    <area>0,248,100%,12</area>
                </progressbar>
            </group>
        </group>
        <shape name="bottomseparator" from="baseseparator_h">
            <position>0,50%+155</position>
        </shape>
    </window>

</mythuitheme>
