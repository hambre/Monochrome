<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="browser">
        <imagetype name="fanart" from="basetitlebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent"/>
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Video Browser</value>
        </textarea>
        <buttonlist name="videos">
            <area>3,51,100%,250</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <align>hcenter</align>
            <layout>horizontal</layout>
            <scrollstyle>center</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <statetype name="buttonitem">
                <area>0,0,174,100%</area>
                <state name="active">
                    <area>0,0,174,100%</area>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <filename>images/DefaultFillImage.png</filename>
                        <alpha>200</alpha>
                    </imagetype>
                    <shape name="bottom" from="baseseparator_h">
                        <position>0,100%</position>
                    </shape>
                </state>
                <state name="selectedactive">
                    <area>-13,0,196,280</area>
                    <shape name="background" from="basebackground"/>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <preserveaspect>false</preserveaspect>
                        <filename>images/DefaultFillImage.png</filename>
                    </imagetype>
                    <shape name="blackframe_black" from="baseframe">
                        <area>-1,-1,100%+1,100%+1</area>
                        <type>box</type>
                        <fill color="#000000" alpha="0" />
                        <line color="#000000" alpha="255" width="3" />
                    </shape>
                    <shape name="whiteframe" from="baseframe">
                        <area>0,0,100%+1,100%+1</area>
                        <type>box</type>
                    </shape>
                </state>
            </statetype>
        </buttonlist>
        <!-- video details -->
        <group name="videodetails">
            <area>25,500,-25,-0</area>
            <!-- left part -->
            <group name="left">
                <area>0,0,900,100%</area>
                <textarea name="title" from="basetext_l">
                    <area>0, 0, 100%, 50</area>
                    <align>left,top</align>
                    <scroll direction="horizontal" />
                </textarea>
                <textarea name="subtitle" from="basetext_m">
                    <area>0, 45, 100%, 50</area>
                    <alpha>150</alpha>
                    <template>%00x00| ~ %%SUBTITLE%</template>
                </textarea>
                <group name="smalldescription" depends="subtitle">
                    <area>0, 110, 100%, 395</area>
                    <textarea name="description" from="basetext_s">
                        <area>0,0,100%,100%</area>
                        <multiline>yes</multiline>
                        <align>justify</align>
                        <cutdown>yes</cutdown>
                        <alpha>150</alpha>
                    </textarea>
                </group>
                <group name="largedescription" depends="!subtitle">
                    <area>0, 80, 100%, 425</area>
                    <textarea name="description" from="basetext_s">
                        <area>0,0,100%,100%</area>
                        <multiline>yes</multiline>
                        <align>justify</align>
                        <cutdown>yes</cutdown>
                        <alpha>150</alpha>
                    </textarea>
                </group>
                <textarea name="breadcrumbs" from="basetext_xs">
                    <area>0,530,100%-50,50</area>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <!-- middle part -->
            <imagetype name="coverart">
                <area>925, 0, 350, 505</area>
            </imagetype>
            <textarea name="genres" from="basetext_xs">
                <area>850,530,490,50</area>
                <align>center</align>
                <alpha>150</alpha>
                <case>capitaliseall</case>
            </textarea>
            <!-- right part -->
            <group name="right">
                <area>1300,0,-1,-0</area>
                <textarea name="directorlabel" from="basetext_s">
                    <area>0,0,250,50</area>
                    <value>Director</value>
                </textarea>
                <textarea name="director" from="basetext_xs">
                    <area>0,40,350,50</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="castlabel" from="basetext_s">
                    <area>0,90,250,50</area>
                    <value>Cast</value>
                </textarea>
                <textarea name="cast" from="basetext_xs">
                    <area>0,140,100%,210</area>
                    <alpha>150</alpha>
                    <multiline>yes</multiline>
                    <align>top,justify</align>
                </textarea>
                <group name="videofacts" from="basevideoiconfacts">
                    <area>0,370,100%,135</area>
                </group>
            </group>
            <textarea name="position" from="basetext_xs">
                <area>100%-150,530,150,50</area>
                <alpha>150</alpha>
                <align>right,vcenter</align>
            </textarea>
        </group>
    </window>

    <!--====================================================================-->

    <window name="gallery">
        <imagetype name="fanart" from="basetitlebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent"/>
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Video Gallery</value>
        </textarea>
        <statetype name="userratingstate" from="basestarrating">
            <position>35,495</position>
        </statetype>

        <textarea name="title" from="basetext_l">
            <area>235, 490, -235, 40</area>
            <align>top,hcenter</align>
            <scroll direction="horizontal" />
        </textarea>
        <statetype name="watchedstate" from="basewatchedstate">
            <position>100%-67,495</position>
        </statetype>
        <buttonlist name="videos">
            <area>35,560,100%,450</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <align>hcenter</align>
            <layout>grid</layout>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>flowing</wrapstyle>
            <statetype name="buttonitem">
                <area>0,0,154,220</area>
                <state name="active">
                    <area>0,0,154,220</area>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <filename>images/DefaultFillImage.png</filename>
                        <alpha>150</alpha>
                    </imagetype>
                    <shape name="top" from="baseseparator_h">
                        <position>0,0</position>
                    </shape>
                    <shape name="bottom" from="baseseparator_h">
                        <position>0,100%</position>
                    </shape>
                </state>
                <state name="selectedactive">
                    <area>-10,-15,175,250</area>
                    <shape name="background" from="basebackground"/>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <preserveaspect>false</preserveaspect>
                        <filename>images/DefaultFillImage.png</filename>
                    </imagetype>
                    <shape name="blackframe_black" from="baseframe">
                        <area>-1,-1,100%+1,100%+1</area>
                        <type>box</type>
                        <fill color="#000000" alpha="0" />
                        <line color="#000000" alpha="255" width="3" />
                    </shape>
                    <shape name="whiteframe" from="baseframe">
                        <area>0,0,100%+1,100%+1</area>
                        <type>box</type>
                    </shape>
                </state>
            </statetype>
        </buttonlist>
        <!-- footer -->
        <textarea name="breadcrumbs" from="basetext_xs">
            <area>25,1030,900,50</area>
            <alpha>150</alpha>
        </textarea>
        <textarea name="genres" from="basetext_xs">
            <area>50%-250,1030,500,50</area>
            <alpha>150</alpha>
            <case>capitaliseall</case>
            <align>center</align>
        </textarea>
        <textarea name="position" from="basetext_xs">
            <area>100%-175,1030,150,50</area>
            <alpha>150</alpha>
            <align>right,vcenter</align>
        </textarea>
    </window>

    <!--====================================================================-->

    <window name="tree">
        <imagetype name="fanart" from="basetitlebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent"/>
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Video List</value>
        </textarea>
        <!-- left part - video list -->
        <buttontree name="videos">
            <area>25,500,750,505</area>
            <numlist>1</numlist>
            <buttonlist name="listtemplate" from="baseitemlist">
            </buttonlist>
        </buttontree>
        <!-- right part - video details -->
        <group name="videodetails">
            <area>800,500,-25,505</area>
            <textarea name="title" from="basetext_l">
                <area>0, 0, 100%, 50</area>
                <align>left,top</align>
                <scroll direction="horizontal" />
            </textarea>
            <textarea name="subtitle" from="basetext_m">
                <area>0, 45, 100%, 45</area>
                <alpha>150</alpha>
                <template>%00x00| ~ %%SUBTITLE%</template>
            </textarea>
            <group name="smalldescription" depends="subtitle">
                <area>0, 100, 100%, 270</area>
                <textarea name="description" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="largedescription" depends="!subtitle">
                <area>0, 70, 100%, 300</area>
                <textarea name="description" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="videotextfacts" from="basevideotextfacts">
                <area>0,100%-125,725,125</area>
            </group>
            <group name="videofacts" from="basevideoiconfacts">
                <area>750,100%-125,100%,125</area>
            </group>
        </group>
        <!-- footer -->
        <textarea name="breadcrumbs" from="basetext_xs">
            <area>25,1030,1500,50</area>
            <alpha>150</alpha>
            <scroll direction="horizontal" />
        </textarea>
        <textarea name="position" from="basetext_xs">
            <area>100%-175,1030,150,50</area>
            <alpha>150</alpha>
            <align>right,vcenter</align>
        </textarea>
    </window>

    <!--====================================================================-->

    <window name="manager">
        <imagetype name="fanart" from="basetitlebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent"/>
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Video Manager</value>
        </textarea>
        <!-- left part - video list -->
        <buttonlist name="videos" from="baseitemlist">
            <area>25,500,900,505</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <layout>vertical</layout>
            <scrollstyle>center</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <statetype name="buttonitem">
                <area>0,0,100%,165</area>
                <state name="active">
                    <imagetype name="coverart">
                        <area>0,0,115,165</area>
                        <alpha>100</alpha>
                    </imagetype>
                    <textarea name="buttontext" from="baseitemtext">
                        <area>125,10,-40,32</area>
                        <align>left,top</align>
                        <alpha>100</alpha>
                    </textarea>
                    <textarea name="genres" from="basetext_xs">
                        <area>125,80,600,30</area>
                        <alpha>150</alpha>
                    </textarea>
                    <textarea name="director" from="basetext_xs">
                        <area>125,120,400,30</area>
                        <alpha>150</alpha>
                    </textarea>
                    <textarea name="year" from="basetext_xs">
                        <area>100%-150,80,-10,30</area>
                        <align>right,vcenter</align>
                        <alpha>150</alpha>
                    </textarea>
                    <textarea name="length" from="basetext_xs">
                        <area>100%-150,120,-10,30</area>
                        <align>right,vcenter</align>
                        <alpha>150</alpha>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <imagetype name="coverart">
                        <area>0,0,115,165</area>
                        <alpha>255</alpha>
                    </imagetype>
                    <textarea name="buttontext" from="baseitemtext">
                        <area>125,10,-5,32</area>
                        <align>left,top</align>
                        <alpha>255</alpha>
                    </textarea>
                    <statetype name="watchedstate" from="basewatchedstate">
                        <position>100%-35,10</position>
                    </statetype>
                </state>
            </statetype>
        </buttonlist>
        <!-- right part - video details -->
        <group name="videodetails">
            <area>975,500,-25,505</area>
            <textarea name="title" from="basetext_l">
                <area>0, 0, 100%, 50</area>
                <align>hcenter,top</align>
                <scroll direction="horizontal" />
            </textarea>
            <textarea name="subtitle" from="basetext_m">
                <area>0, 45, 100%, 45</area>
                <alpha>150</alpha>
                <template>%00x00| ~ %%SUBTITLE%</template>
            </textarea>
            <group name="smalldescription" depends="subtitle">
                <area>0, 100, 100%, 370</area>
                <textarea name="description" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="largedescription" depends="!subtitle">
                <area>0, 70, 100%, 400</area>
                <imagetype name="coverart">
                    <area>0,5,266,380</area>
                </imagetype>
                <textarea name="description" from="basetext_s">
                    <area>300,0,100%,100%</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <statetype name="userratingstate" from="basestarrating">
                <position>0,100%-25</position>
            </statetype>
            <group name="userrating" from="baseuserrating">
                <position>170,100%-25</position>
            </group>
            <group name="people">
                <area>300,100%-25,100%,32</area>
                <textarea name="castlabel" from="basetext_xs" depends="cast">
                    <area>0,0,150,32</area>
                    <value>Cast</value>
                </textarea>
                <textarea name="cast" from="basetext_xs">
                    <area>160,0,100%,32</area>
                    <alpha>150</alpha>
                    <scroll direction="left"/>
                    <align>top,left</align>
                </textarea>
            </group>
        </group>
        <!-- footer -->
        <textarea name="breadcrumbs" from="basetext_xs">
            <area>25,1030,1500,50</area>
            <alpha>150</alpha>
            <scroll direction="horizontal" />
        </textarea>
        <textarea name="position" from="basetext_xs">
            <area>100%-175,1030,150,50</area>
            <alpha>150</alpha>
            <align>right,vcenter</align>
        </textarea>
    </window>

    <!--====================================================================-->

    <window name="itemdetailpopup">
        <area>-1,0,1250,800</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-550" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-550" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Details</value>
            </textarea>
        </group>
        <!-- content -->
        <group name="content">
            <area>50,75,-50,-50</area>
            <imagetype name="coverart">
                <area>0,0,350,500</area>
                <alpha>255</alpha>
            </imagetype>
            <group name="videofacts" from="basevideoiconfacts">
                <area>0,525,350,125</area>
            </group>
            <textarea name="subtitle" from="basetext_m">
                <area>400, 0, 100%, 45</area>
                <alpha>150</alpha>
                <template>%00x00| ~ %%SUBTITLE%</template>
            </textarea>
            <group name="smalldescription" depends="subtitle">
                <area>400, 80, 100%, 460</area>
                <textarea name="description" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="largedescription" depends="!subtitle">
                <area>400, 0, 100%, 510</area>
                <textarea name="description" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="videotextfacts" from="basevideotextfacts">
                <area>400,525,100%,125</area>
            </group>
        </group>
        <!-- bottom part with buttons -->
        <shape name="separator" from="baseseparator_h">
            <position>0,760</position>
        </shape>
        <button name="play_button" from="basebutton">
            <area>50%-225,785,200,40</area>
            <value>Play</value>
        </button>
        <button name="done_button" from="basebutton">
            <area>50%+25,785,200,40</area>
            <value>Done</value>
        </button>
    </window>
    <!--====================================================================-->

    <window name="castpopup">
        <area>-1,0,600,550</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-550" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-550" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Cast</value>
            </textarea>
        </group>
        <buttonlist name="cast" from="baseitemlist">
            <area>50,75,-50,-25</area>
        </buttonlist>
    </window>

    <!--====================================================================-->

    <window name="descriptionpopup">
        <area>-1,0,1000,650</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-550" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-550" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Plot</value>
            </textarea>
        </group>
        <textarea name="description" from="basetext_s">
            <area>50,75,-50,-25</area>
            <multiline>yes</multiline>
            <align>justify,vcenter</align>
            <cutdown>yes</cutdown>
            <alpha>150</alpha>
        </textarea>
    </window>

</mythuitheme> 
