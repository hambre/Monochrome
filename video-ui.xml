<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="browser">
        <imagetype name="fanart" from="basetitlebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent"/>
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Video Browser</value>
        </textarea>
        <buttonlist name="videos">
            <area>3,51,100%,250</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <align>hcenter</align>
            <layout>horizontal</layout>
            <scrollstyle>center</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <statetype name="buttonitem">
                <area>0,0,174,100%</area>
                <state name="active">
                    <area>0,0,174,100%</area>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <filename>images/DefaultFillImage.png</filename>
                        <alpha>200</alpha>
                    </imagetype>
                    <shape name="bottom" from="baseseparator_h">
                        <position>0,100%</position>
                    </shape>
                </state>
                <state name="selectedactive">
                    <area>-13,0,196,280</area>
                    <shape name="background" from="basebackground"/>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <preserveaspect>false</preserveaspect>
                        <filename>images/DefaultFillImage.png</filename>
                    </imagetype>
                    <shape name="blackframe_black" from="baseframe">
                        <area>-1,-1,100%+1,100%+1</area>
                        <type>box</type>
                        <fill color="#000000" alpha="0" />
                        <line color="#000000" alpha="255" width="3" />
                    </shape>
                    <shape name="whiteframe" from="baseframe">
                        <area>0,0,100%+1,100%+1</area>
                        <type>box</type>
                    </shape>
                </state>
            </statetype>
        </buttonlist>
        <!-- video details -->
        <group name="videodetails">
            <area>25,500,-25,-0</area>
            <!-- left part -->
            <group name="left">
                <area>0,0,900,100%</area>
                <textarea name="title" from="basetext_l">
                    <area>0, 0, 100%, 50</area>
                    <align>left,top</align>
                    <scroll direction="horizontal" />
                </textarea>
                <textarea name="subtitle" from="basetext_m">
                    <area>0, 45, 100%, 50</area>
                    <alpha>150</alpha>
                    <template>%00x00| ~ %%SUBTITLE%</template>
                </textarea>
                <group name="smalldescription" depends="subtitle">
                    <area>0, 110, 100%, 395</area>
                    <textarea name="description" from="basetext_s">
                        <area>0,0,100%,100%</area>
                        <multiline>yes</multiline>
                        <align>justify</align>
                        <cutdown>yes</cutdown>
                        <alpha>150</alpha>
                    </textarea>
                </group>
                <group name="largedescription" depends="!subtitle">
                    <area>0, 80, 100%, 425</area>
                    <textarea name="description" from="basetext_s">
                        <area>0,0,100%,100%</area>
                        <multiline>yes</multiline>
                        <align>justify</align>
                        <cutdown>yes</cutdown>
                        <alpha>150</alpha>
                    </textarea>
                </group>
                <textarea name="breadcrumbs" from="basetext_xs">
                    <area>0,530,100%-50,50</area>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <!-- middle part -->
            <imagetype name="coverart">
                <area>925, 0, 350, 505</area>
            </imagetype>
            <textarea name="genres" from="basetext_xs">
                <area>850,530,490,50</area>
                <align>center</align>
                <alpha>150</alpha>
                <case>capitaliseall</case>
            </textarea>
            <!-- right part -->
            <group name="right">
                <area>1300,0,-1,-0</area>
                <textarea name="directorlabel" from="basetext_s">
                    <area>0,0,250,50</area>
                    <value>Director</value>
                </textarea>
                <textarea name="director" from="basetext_xs">
                    <area>0,40,350,50</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="castlabel" from="basetext_s">
                    <area>0,90,250,50</area>
                    <value>Cast</value>
                </textarea>
                <textarea name="cast" from="basetext_xs">
                    <area>0,140,100%,210</area>
                    <alpha>150</alpha>
                    <multiline>yes</multiline>
                    <align>top,justify</align>
                </textarea>
                <group name="videofacts" from="basevideofacts">
                    <area>0,370,100%,135</area>
                </group>
            </group>
            <textarea name="position" from="basetext_xs">
                <area>100%-150,530,150,50</area>
                <alpha>150</alpha>
                <align>right,vcenter</align>
            </textarea>
        </group>
    </window>

    <window name="gallery">
        <imagetype name="fanart" from="basetitlebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent"/>
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Video Gallery</value>
        </textarea>
        <statetype name="userratingstate" from="basestarrating">
            <position>35,495</position>
        </statetype>

        <textarea name="title" from="basetext_l">
            <area>235, 490, -235, 40</area>
            <align>top,hcenter</align>
            <scroll direction="horizontal" />
        </textarea>
        <statetype name="watchedstate" from="basewatchedstate">
            <position>100%-67,495</position>
        </statetype>
        <buttonlist name="videos">
            <area>35,560,100%,450</area>
            <buttonarea>0,0,100%,100%</buttonarea>
            <align>hcenter</align>
            <layout>grid</layout>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>flowing</wrapstyle>
            <statetype name="buttonitem">
                <area>0,0,154,220</area>
                <state name="active">
                    <area>0,0,154,220</area>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <filename>images/DefaultFillImage.png</filename>
                        <alpha>150</alpha>
                    </imagetype>
                    <shape name="top" from="baseseparator_h">
                        <position>0,0</position>
                    </shape>
                    <shape name="bottom" from="baseseparator_h">
                        <position>0,100%</position>
                    </shape>
                </state>
                <state name="selectedactive">
                    <area>-10,-15,175,250</area>
                    <shape name="background" from="basebackground"/>
                    <imagetype name="buttonimage">
                        <area>0,0,100%,100%</area>
                        <preserveaspect>false</preserveaspect>
                        <filename>images/DefaultFillImage.png</filename>
                    </imagetype>
                    <shape name="blackframe_black" from="baseframe">
                        <area>-1,-1,100%+1,100%+1</area>
                        <type>box</type>
                        <fill color="#000000" alpha="0" />
                        <line color="#000000" alpha="255" width="3" />
                    </shape>
                    <shape name="whiteframe" from="baseframe">
                        <area>0,0,100%+1,100%+1</area>
                        <type>box</type>
                    </shape>
                </state>
            </statetype>
        </buttonlist>

        <textarea name="breadcrumbs" from="basetext_xs">
            <area>25,1030,900,50</area>
            <alpha>150</alpha>
        </textarea>
        <textarea name="genres" from="basetext_xs">
            <area>50%-250,1030,500,50</area>
            <alpha>150</alpha>
            <case>capitaliseall</case>
            <align>center</align>
        </textarea>
        <textarea name="position" from="basetext_xs">
            <area>100%-175,1030,150,50</area>
            <alpha>150</alpha>
            <align>right,vcenter</align>
        </textarea>
    </window>

    <window name="castpopup">
        <area>-1,0,600,550</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-550" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-550" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Cast</value>
            </textarea>
        </group>
        <buttonlist name="cast" from="baseitemlist">
            <area>50,75,-50,-25</area>
        </buttonlist>
    </window>

    <window name="descriptionpopup">
        <area>-1,0,1000,650</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-550" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-550" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Plot</value>
            </textarea>
        </group>
        <textarea name="description" from="basetext_s">
            <area>50,75,-50,-25</area>
            <multiline>yes</multiline>
            <align>justify,vcenter</align>
            <cutdown>yes</cutdown>
            <alpha>150</alpha>
        </textarea>
    </window>

</mythuitheme> 
