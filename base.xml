<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <!-- fonts small, medium, large, extra large, extra extra large, extra small -->
    <fontdef name="basefont_s" face="Jesaya Free">
        <pixelsize>32</pixelsize>
        <color>#FFFFFF</color>
    </fontdef>
    <fontdef name="basefont_m" from="basefont_s">
        <pixelsize>36</pixelsize>
    </fontdef>
    <fontdef name="basefont_l" from="basefont_s">
        <pixelsize>39</pixelsize>
        <weight>bold</weight>
    </fontdef>
    <fontdef name="basefont_xl" from="basefont_s">
        <pixelsize>42</pixelsize>
        <weight>bold</weight>
    </fontdef>
    <fontdef name="basefont_xxl" from="basefont_s">
        <pixelsize>48</pixelsize>
        <weight>bold</weight>
    </fontdef>
    <fontdef name="basefont_xs" from="basefont_s">
        <pixelsize>28</pixelsize>
    </fontdef>
    <fontdef name="basefont_xxs" from="basefont_s">
        <pixelsize>24</pixelsize>
    </fontdef>

    <shape name="baseframe">
        <area>0,0,30,30</area>
        <type>roundbox</type>
        <cornerradius>5</cornerradius>
        <fill color="#000000" alpha="0" />
        <line color="#FFFFFF" alpha="255" width="2" />
    </shape>

    <!-- backgrounds -->
    <shape name="basebackground">
        <area>0,0,100%,100%</area>
        <type>box</type>
        <fill color="#000000" alpha="255" />
        <line color="#000000" alpha="0" width="0" />
    </shape>

    <imagetype name="baseimagebackground">
        <area>0,0,100%,100%</area>
        <filename>images/BackgroundDefault.png</filename>
    </imagetype>

    <imagetype name="basetitlebackground">
        <area>0,0,100%,100%</area>
        <filename>images/BackgroundTitle.png</filename>
    </imagetype>

    <!-- background of popup windows -->
    <shape name="basepopupbackground" from="baseframe">
        <fill color="#000000" alpha="255" />
        <alpha>255</alpha>
    </shape>

    <!-- horizontal and vertical separators -->
    <shape name="baseseparator_h">
        <area>0,0,100%,1</area>
        <type>box</type>
        <fill style="gradient">
            <gradient direction="horizontal">
                <stop position="0"   color="#FFFFFF" alpha="50" />
                <stop position="45"  color="#FFFFFF" alpha="200" />
                <stop position="50"  color="#FFFFFF" alpha="255" />
                <stop position="55"  color="#FFFFFF" alpha="200" />
                <stop position="100" color="#FFFFFF" alpha="50" />
            </gradient>
        </fill>
    </shape>
    <shape name="baseseparator_v">
        <area>0,0,1,100%</area>
        <type>box</type>
        <fill style="gradient">
            <gradient direction="vertical">
                <stop position="0"   color="#FFFFFF" alpha="50" />
                <stop position="45"  color="#FFFFFF" alpha="200" />
                <stop position="50"  color="#FFFFFF" alpha="255" />
                <stop position="55"  color="#FFFFFF" alpha="200" />
                <stop position="100" color="#FFFFFF" alpha="50" />
            </gradient>
        </fill>
    </shape>

    <!-- separator of items in a button list -->
    <shape name="baseitemseparator_h" from="baseseparator_h">
        <alpha>50</alpha>
    </shape>

    <!-- placeholder for missing images like coverart or preview -->
    <shape name="baseimageplaceholder">
        <type>box</type>
        <area>0, 0, 350, 505</area>
        <fill style="gradient">
            <gradient direction="vertical">
                <stop position="0"   color="#FFFFFF" alpha="75" />
                <stop position="30"  color="#FFFFFF" alpha="75" />
                <stop position="100" color="#FFFFFF" alpha="25" />
            </gradient>
        </fill>
    </shape>

    <!-- selected background of controls like button, textedit, spinbox -->
    <shape name="basecontrolbackground" from="basebackground">
        <area>0,2,100%,-2</area>
        <fill color="#FFFFFF" alpha="255" />
        <alpha>25</alpha>
    </shape>

    <shape name="basebar" from="basebackground">
        <area>0,0,100%,50</area>
    </shape>

    <!-- default screen header -->
    <group name="baseheader">
        <area>0, 0, 100%, 50</area>
        <shape name="headerbar" from="basebar" />
        <shape name="headersep" from="baseseparator_h">
            <position>0,50</position>
        </shape>
        <clock name="date">
            <area>25,0,250,50</area>
            <font>basefont_s</font>
            <align>left,vcenter</align>
            <alpha>100</alpha>
            <template>%DATE%</template>
        </clock>
        <clock name="time">
            <area>1645,0,250,50</area>
            <font>basefont_s</font>
            <align>right,vcenter</align>
            <alpha>100</alpha>
            <template>%TIME%</template>
        </clock>
    </group>

    <!-- default screen footer -->
    <group name="basefooter">
        <area>0, 100%-50, 100%, 50</area>
        <shape name="footerbar" from="basebar">
            <position>0, 0</position>
        </shape>
        <shape name="footersep" from="baseseparator_h">
            <position>0, 0</position>
        </shape>
    </group>

    <!-- header for popup windows -->
    <group name="basepopupheader">
        <area>0,0,100%,100%</area>
        <!-- make titlebar 50px higher to accomodate animation overshooting -->
        <shape name="titlebar" from="basebar">
            <area>0,0,100%,100</area>
        </shape>
        <shape name="frame" from="basepopupbackground">
            <area>0,0,100%,100%</area>
            <alpha>240</alpha>
        </shape>
        <shape name="titleseparator" from="baseseparator_h">
            <position>0,100</position>
        </shape>
    </group>

    <!-- the content background -->
    <group name="basecontent">
        <area>0, 475, 100%, -50</area>
        <shape name="contentbar" from="basebar">
            <area>0, 0, 100%, 100%</area>
            <alpha>200</alpha>
        </shape>
        <shape name="contentsep" from="baseseparator_h">
            <position>0, 0</position>
        </shape>
    </group>

    <!-- points -->
    <shape name="basepoint_s">
        <area>0,0,10,10</area>
        <type>ellipse</type>
        <fill color="#FFFFFF" alpha="255" />
        <line color="#000000" alpha="0" width="0" />
    </shape>
    <shape name="basepoint_m" from="basepoint_s">
        <area>0,0,20,20</area>
    </shape>
    <shape name="basepoint_l" from="basepoint_s">
        <area>0,0,30,30</area>
    </shape>

    <!-- horizontal and vertical lines -->
    <shape name="baseline_h">
        <area>0,0,100%,2</area>
        <type>box</type>
        <fill color="#FFFFFF" alpha="255" />
        <line color="#000000" alpha="0" width="0" />
    </shape>
    <shape name="baseline_v">
        <area>0,0,2,100%-120</area>
        <type>box</type>
        <fill color="#FFFFFF" alpha="255" />
        <line color="#000000" alpha="0" width="0" />
    </shape>

    <!-- textarea with small, medium, large and extra small font -->
    <textarea name="basetext_s">
        <font>basefont_s</font>
        <multiline>no</multiline>
        <align>left,vcenter</align>
        <cutdown>yes</cutdown>
    </textarea>
    <textarea name="basetext_m" from="basetext_s">
        <font>basefont_m</font>
    </textarea>
    <textarea name="basetext_l" from="basetext_s">
        <font>basefont_l</font>
    </textarea>
    <textarea name="basetext_xs" from="basetext_s">
        <font>basefont_xs</font>
    </textarea>

    <!-- text for screen titles -->
    <textarea name="basetitletext">
        <area>250, 0, -250, 50</area>
        <font>basefont_m</font>
        <multiline>no</multiline>
        <align>allcenter</align>
        <alpha>150</alpha>
    </textarea>

    <!-- text for popup window titles -->
    <textarea name="basepopuptitletext" from="basetitletext">
        <area>0,50,100%,50</area>
        <align>allcenter</align>
        <alpha>200</alpha>
    </textarea>

    <!-- help text for settings windows -->
    <textarea name="basehelptext" from="basetext_xs">
        <area>50%-500,100%-170,1000,70</area>
        <align>hcenter,bottom</align>
        <multiline>yes</multiline>
        <alpha>200</alpha>
    </textarea>

    <!-- list item text area -->
    <textarea name="baseitemtext">
        <font>basefont_m</font>
        <multiline>no</multiline>
        <align>left,vcenter</align>
        <cutdown>yes</cutdown>
    </textarea>

    <!-- item list defaults -->
    <buttonlist name="baseitemlist">
        <area>0,1000,750,500</area>
        <searchposition>-1,50</searchposition>
        <align>top,hcenter</align>
        <layout>vertical</layout>
        <wrapstyle>selection</wrapstyle>
        <arrange>stack</arrange>
        <buttonarea>0,0,100%,100%</buttonarea>
        <showarrow>no</showarrow>
        <statetype name="buttonitem">
            <area>0,0,100%,55</area>
            <state name="active">
                <area>0,0,100%,55</area>
                <shape name="itemseparator" from="baseitemseparator_h">
                    <position>0,100%</position>
                </shape>
                <textarea name="buttontext" from="baseitemtext">
                   <area>5,0,-5,100%</area>
                   <alpha>100</alpha>
                </textarea>
            </state>
            <state name="selectedactive">
                <area>0,0,100%,55</area>
                <imagetype name="buttonarrow">
                    <position>100%-25,50%-12</position>
                    <filename>images/ArrowRightBig.png</filename>
                    <alpha>50</alpha>
                </imagetype>
                <shape name="background" from="basecontrolbackground">
                    <area>0,0,100%,100%</area>
                </shape>
                <shape name="itemseparator" from="baseitemseparator_h">
                   <position>0,100%</position>
                </shape>
                <textarea name="buttontext" from="baseitemtext">
                    <area>5,0,-5,100%</area>
                    <scroll direction="left" />
                    <alpha>255</alpha>
                </textarea>
                <statetype name="nodetype">
                    <area>0,0,100%,55</area>
                    <state name="subfolder">
                        <area>0,0,100%,55</area>
                        <imagetype name="icon">
                            <position>100%-25,50%-12</position>
                            <filename>images/ArrowRightBig.png</filename>
                            <alpha>50</alpha>
                        </imagetype>
                    </state>
                    <state name="folder" from="subfolder"/>
                    <state name="upfolder">
                        <area>0,0,100%,55</area>
                        <imagetype name="icon">
                            <position>100%-30,50%-10</position>
                            <filename>images/ArrowUpBig.png</filename>
                            <alpha>50</alpha>
                        </imagetype>
                   </state>
               </statetype>
            </state>
            <state name="inactive" from="active">
                <alpha>0</alpha>
            </state>
            <state name="selectedinactive" from="selectedactive">
                <alpha>0</alpha>
            </state>
        </statetype>
    </buttonlist>

    <!-- single line button list, used like a combobox -->
    <buttonlist name="baseselector" from="baseitemlist">
        <area>0,0,250,40</area>
        <buttonarea>0,0,100%,40</buttonarea>
        <layout>horizontal</layout>
        <statetype name="buttonitem">
            <area>0,0,100%,40</area>
            <state name="selectedactive">
                <area>0,0,100%,40</area>
                <textarea name="buttontext" from="basetext_s">
                    <area>5,0,-20,100%</area>
                    <alpha>200</alpha>
                </textarea>
                <shape name="line" from="baseitemseparator_h">
                    <position>0,100%</position>
                    <alpha>150</alpha>
                </shape>
            </state>
            <state name="active">
                <area>0,0,100%,40</area>
                <!-- disable highlighting background when not selected -->
                <shape name="background" from="basecontrolbackground">
                    <area>0,0,100%,100%</area>
                    <alpha>0</alpha>
                </shape>
                <textarea name="buttontext" from="basetext_s">
                    <area>5,0,-20,100%</area>
                    <alpha>100</alpha>
                </textarea>
                <shape name="line" from="baseitemseparator_h">
                    <position>0,100%</position>
                    <alpha>150</alpha>
                </shape>
            </state>
            <state name="inactive" from="active"/>
            <state name="selectedinactive" from="active"/>
        </statetype>
        <statetype name="downscrollarrow">
            <position>100%-15,50%-10</position>
            <state type="full">
                <imagetype name="down">
                    <filename>images/ArrowRight.png</filename>
                </imagetype>
            </state>
            <state type="off">
                <imagetype name="down">
                    <filename>images/ArrowRight.png</filename>
                    <alpha>100</alpha>
                </imagetype>
            </state>
        </statetype>
        <statetype name="upscrollarrow">
            <position>100%-15,50%+2</position>
            <state type="full">
                <imagetype name="up">
                    <filename>images/ArrowLeft.png</filename>
                </imagetype>
            </state>
            <state type="off">
                <imagetype name="up">
                    <filename>images/ArrowLeft.png</filename>
                    <alpha>100</alpha>
                </imagetype>
            </state>
        </statetype>
    </buttonlist>

    <imagetype name="baseicon">
        <area>0,0,75,32</area>
        <alpha>200</alpha>
        <preserveaspect>yes</preserveaspect>
        <filename>images/BackgroundDefault.png</filename>
    </imagetype>

    <!-- progress bar -->
    <progressbar name="baseprogress">
        <area>0,0,700,20</area>
        <layout>horizontal</layout>
        <style>reveal</style>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <cornerradius>5</cornerradius>
            <line color="#FFFFFF" alpha="255" width="1"/>
            <alpha>200</alpha>
        </shape>
        <shape name="progressimage">
            <area>5,5,-5,-5</area>
            <type>roundbox</type>
            <cornerradius>5</cornerradius>
            <fill color="#FFFFFF" alpha="255" />
            <alpha>50</alpha>
        </shape>
    </progressbar>

    <!-- text underline for text controls like textedit and spinbox -->
    <group name="basetextunderline">
        <area>0,0,150,30</area>
        <shape name="leftborder" from="baseline_v">
            <area>0,100%-11,2,10</area>
        </shape>
        <shape name="rightborder" from="baseline_v">
            <area>100%-2,100%-11,2,10</area>
        </shape>
        <shape name="bottomborder1" from="baseline_h">
            <area>0,100%-2,100%,2</area>
        </shape>
    </group>

    <!-- checkbox -->
    <checkbox name="basecheckbox">
        <area>0,0,25,25</area>
        <statetype name="background">
            <state name="active">
                <imagetype name="frame">
                    <filename>images/CheckboxFrame.png</filename>
                    <alpha>150</alpha>
                </imagetype>
            </state>
            <state name="selected">
                <imagetype name="frame">
                    <filename>images/CheckboxFrame.png</filename>
                    <alpha>255</alpha>
                </imagetype>
            </state>
            <state name="disabled" />
        </statetype>
        <statetype name="checkstate">
            <state type="full">
                <imagetype name="mark">
                    <filename>images/CheckboxMark.png</filename>
                    <alpha>200</alpha>
                </imagetype>
            </state>
            <state type="half">
                <imagetype name="mark">
                    <filename>images/CheckboxMark.png</filename>
                    <alpha>200</alpha>
                </imagetype>
            </state>
            <state type="off" />
        </statetype>
    </checkbox>

    <!-- button -->
    <button name="basebutton">
        <area>0,0,150,40</area>
        <statetype name="buttonstate">
            <area>0,0,100%,100%</area>
            <state name="active">
                <area>0,0,100%,100%</area>
                <shape name="background" from="basecontrolbackground">
                    <alpha>10</alpha>
                </shape>
                <shape name="topborder" from="baseseparator_h">
                    <position>0,0</position>
                    <alpha>100</alpha>
                </shape>
                <shape name="bottomborder" from="baseseparator_h">
                    <position>0,100%-1</position>
                    <alpha>100</alpha>
                </shape>
                <textarea name="text" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <align>allcenter</align>
                    <alpha>150</alpha>
                </textarea>
            </state>
            <state name="selected" from="active">
                <shape name="background" from="basecontrolbackground"/>
                <shape name="topborder" from="baseseparator_h">
                    <position>0,0</position>
                    <alpha>200</alpha>
                </shape>
                <shape name="bottomborder" from="baseseparator_h">
                    <position>0,100%-1</position>
                    <alpha>200</alpha>
                </shape>
                <textarea name="text" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <align>allcenter</align>
                    <alpha>255</alpha>
                </textarea>
            </state>
            <state name="disabled" from="active">
                <textarea name="text" from="basetext_s">
                    <area>0,0,100%,100%</area>
                    <align>allcenter</align>
                    <alpha>100</alpha>
                </textarea>
            </state>
            <state name="pushed" from="selected"/>
        </statetype>
    </button>

    <!-- single line textedit -->
    <textedit name="basetextedit">
        <area>0,0,300,32</area>
        <statetype name="background">
            <area>0,0,100%,100%</area>
            <state name="active">
                <area>0,0,100%,100%</area>
                <group name="textunderline" from="basetextunderline">
                    <area>0,0,100%,100%</area>
                    <alpha>100</alpha>
                </group>
            </state>
            <state name="selected" from="active">
                <shape name="background" from="basecontrolbackground"/>
            </state>
            <state name="inactive" from="active">
            </state>
        </statetype>
        <imagetype name="cursor">
            <filename>images/Cursor.png</filename>
            <area>0,0,2,25</area>
        </imagetype>
        <textarea name="text" from="basetext_s">
            <area>5,0,-5,100%</area>
            <alpha>150</alpha>
        </textarea>
    </textedit>

    <!-- multi line textedit -->
    <textedit name="basetexteditmulti">
        <area>0,0,300,100</area>
        <statetype name="background">
            <area>0,0,100%,100%</area>
            <state name="active">
                <area>0,0,100%,100%</area>
                <group name="textunderline" from="basetextunderline">
                    <area>0,0,100%,100%</area>
                    <alpha>100</alpha>
                </group>
            </state>
            <state name="selected" from="active">
                <shape name="background" from="basecontrolbackground"/>
            </state>
            <state name="inactive" from="active">
            </state>
        </statetype>
        <imagetype name="cursor">
            <filename>images/Cursor.png</filename>
            <area>0,0,2,25</area>
        </imagetype>
        <textarea name="text" from="basetext_s">
            <area>5,0,-5,100%</area>
            <multiline>yes</multiline>
            <alpha>150</alpha>
        </textarea>
    </textedit>

    <!-- spinbox -->
    <spinbox name="basespinbox">
        <area>0,0,150,30</area>
        <layout>horizontal</layout>
        <statetype name="buttonitem">
            <area>0,0,100%,100%</area>
            <state name="active">
                <area>0,0,100%-15,100%</area>
                <textarea name="buttontext" from="basetext_s">
                    <area>5,1,-20,-1</area>
                    <alpha>100</alpha>
                </textarea>
                <shape name="line" from="baseitemseparator_h">
                    <position>0,100%</position>
                    <alpha>150</alpha>
                </shape>
            </state>
            <state name="selectedactive" from="active">
                <area>0,0,100%,100%</area>
                <shape name="background" from="basecontrolbackground"/>
                <textarea name="buttontext" from="basetext_s">
                    <area>5,1,-20,-1</area>
                    <alpha>255</alpha>
                </textarea>
            </state>
            <state name="selectedinactive" from="active">
                <area>0,0,100%,100%</area>
                <textarea name="buttontext" from="basetext_s">
                    <area>5,0,-20,100%</area>
                    <alpha>150</alpha>
                </textarea>
            </state>
        </statetype>
        <!-- strangely, up is handled by the left key, and down by the right key when in horizontal layout -->
        <statetype name="downscrollarrow">
            <position>100%-15,50%-10</position>
            <state type="full">
                <imagetype name="down">
                    <filename>images/ArrowRight.png</filename>
                </imagetype>
            </state>
            <state type="off">
                <imagetype name="down">
                    <filename>images/ArrowRight.png</filename>
                    <alpha>100</alpha>
                </imagetype>
            </state>
        </statetype>
        <statetype name="upscrollarrow">
            <position>100%-15,50%+2</position>
            <state type="full">
                <imagetype name="up">
                    <filename>images/ArrowLeft.png</filename>
                </imagetype>
            </state>
            <state type="off">
                <imagetype name="up">
                    <filename>images/ArrowLeft.png</filename>
                    <alpha>100</alpha>
                </imagetype>
            </state>
        </statetype>
    </spinbox>

    <!-- recording job state (recording, commflagging, transcoding) -->
    <statetype name="basejobstate">
        <area>0,0,40,40</area>
        <state name="recording">
            <imagetype name="animation">
                <area>4,4,32,32</area>
                <filepattern low="1" high="8">images/icons/animated/Recording%1.png</filepattern>
                <delay>75</delay>
            </imagetype>
        </state>
        <state name="commflagging">
            <imagetype name="animation">
                <area>4,4,32,32</area>
                <filepattern low="1" high="8">images/icons/animated/CommFlagging%1.png</filepattern>
                <delay>75</delay>
            </imagetype>
        </state>
        <state name="transcoding">
            <imagetype name="animation">
                <area>4,4,32,32</area>
                <filepattern low="1" high="8">images/icons/animated/Transcoding%1.png</filepattern>
                <delay>75</delay>
            </imagetype>
        </state>
    </statetype>

    <statetype name="basewatchedstate">
        <area>0,0,32,32</area>
        <state name="yes">
            <imagetype name="icon" from="baseicon">
                <area>0,0,32,32</area>
                <filename>images/icons/Watched.png</filename>
            </imagetype>
        </state>
    </statetype>

    <statetype name="basestarrating">
        <area>0,0,175,32</area>
        <alpha>200</alpha>
        <state name="0">
            <imagetype name="0">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating00.png</filename>
            </imagetype>
        </state>
        <state name="1">
            <imagetype name="1">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating01.png</filename>
            </imagetype>
        </state>
        <state name="2">
            <imagetype name="2">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating02.png</filename>
            </imagetype>
        </state>
        <state name="3">
            <imagetype name="3">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating03.png</filename>
            </imagetype>
        </state>
        <state name="4">
            <imagetype name="4">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating04.png</filename>
            </imagetype>
        </state>
        <state name="5">
            <imagetype name="5">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating05.png</filename>
            </imagetype>
        </state>
        <state name="6">
            <imagetype name="6">
                <area>0,0,175,32</area>
                <filename>images/icons/Rating06.png</filename>
            </imagetype>
