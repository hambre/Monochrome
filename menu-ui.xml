<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="mainmenu">
        <fontdef name="menufont_s" from="basefont_s">
            <pixelsize>30</pixelsize>
        </fontdef>
        <fontdef name="menufont_m" from="basefont_s">
            <pixelsize>40</pixelsize>
        </fontdef>
        <fontdef name="menufont_l" from="basefont_s">
            <pixelsize>50</pixelsize>
        </fontdef>

        <imagetype name="background" from="basetitlebackground" />

        <statetype name="watermarks">
            <state name="MENU_MEDIA_LIBRARY">
                <imagetype name="background">
                    <filename>images/BackgroundLibrary.jpg</filename>
                    <area>0,0,1920,1080</area>
                </imagetype>
            </state>
            <state name="MENU_MANAGE_RECORDINGS">
                <imagetype name="background">
                    <filename>images/BackgroundRecordings.jpg</filename>
                    <area>0,0,1920,1080</area>
                </imagetype>
            </state>
            <state name="MENU_INFO_CENTER">
                <imagetype name="background">
                    <filename>images/BackgroundInformation.jpg</filename>
                    <area>0,0,1920,1080</area>
                </imagetype>
            </state>
            <state name="MENU_OPTICAL_DISKS">
                <imagetype name="background">
                    <filename>images/BackgroundOptical.jpg</filename>
                    <area>0,0,1920,1080</area>
                </imagetype>
            </state>
            <state name="TV_WATCH_TV">
               <imagetype name="background">
                   <filename>images/BackgroundTV.jpg</filename>
                   <area>0,0,1920,1080</area>
               </imagetype>
            </state>
            <state name="TV_WATCH_RECORDINGS">
               <imagetype name="background">
                   <filename>images/BackgroundTV.jpg</filename>
                   <area>0,0,1920,1080</area>
               </imagetype>
            </state>
            <state name="VIDEO_BROWSER">
               <imagetype name="background">
                   <filename>images/BackgroundTV.jpg</filename>
                   <area>0,0,1920,1080</area>
               </imagetype>
            </state>
            <state name="TV_PROGRAM_GUIDE">
               <imagetype name="background">
                   <filename>images/BackgroundTV.jpg</filename>
                   <area>0,0,1920,1080</area>
               </imagetype>
            </state>
            <state name="MENU_UTILITIES_SETUP">
                <imagetype name="background">
                    <filename>images/BackgroundSetup.jpg</filename>
                    <area>0,0,1920,1080</area>
                </imagetype>
            </state>
        </statetype>

        <group name="pageheader" from="baseheader" />
        <textarea name="pagetitle" from="basetitletext">
            <value>Main Menu</value>
        </textarea>
        <group name="content" from="basecontent" />

        <buttonlist name="menu">
            <area>25,500,1870,550</area>
            <layout>vertical</layout>
            <buttonarea>0,0,1870,550</buttonarea>
            <scrollstyle>center</scrollstyle>
            <spacing>3</spacing>
            <wrapstyle>items</wrapstyle>
            <align>vcenter</align>
            <statetype name="buttonitem">
                <state name="active">
                    <textarea name="buttontext">
                        <area>0,0,910,100</area>
                        <font>menufont_m</font>
                        <cutdown>yes</cutdown>
                        <align>right,vcenter</align>
                        <alpha>105</alpha>
                    </textarea>
                </state>
                <state name="selectedactive">
                    <textarea name="buttontext">
                        <area>0,0,910,100</area>
                        <font>menufont_l</font>
                        <cutdown>yes</cutdown>
                        <case>upper</case>
                        <align>right,vcenter</align>
                    </textarea>
                    <textarea name="description">
                        <area>960,0,910,100</area>
                        <font>menufont_s</font>
                        <multiline>yes</multiline>
                        <align>left,vcenter</align>
                        <alpha>205</alpha>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>
        <shape name="middlesep" from="baseseparator_v">
            <area>50%,500,2,500</area>
        </shape>
        <group name="pagefooter" from="basefooter" />
    </window>

</mythuitheme>
