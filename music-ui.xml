<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="playlistview" include="music-base.xml">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundMusic.jpg</filename>
        </imagetype>
        <group name="decoration" from="baseeditordecoration"/>
        <textarea name="pagetitle" from="basepagetitletext">
            <value>Playlist View</value>
        </textarea>

        <textarea name="notracks" from="basetext_m">
            <area>100,465,-100,-115</area>
            <align>center</align>
            <value>You haven't selected any tracks to play</value>
        </textarea>

        <buttonlist name="currentplaylist" from="baseitemlist">
            <area>25,465,50%-25,-115</area>
            <statetype name="buttonitem">
                <area>0,0,100%,55</area>
                <state name="active">
                    <area>0,0,100%,55</area>
                    <shape name="itemseparator" from="baseitemseparator_h">
                        <position>0,100%</position>
                    </shape>
                    <textarea name="title" from="baseitemtext">
                        <template>%ARTIST% ~ %TITLE%</template>
                        <area>5,0,-5,100%</area>
                        <alpha>100</alpha>
                    </textarea>
                </state>
                <state name="selectedactive" from="active">
                    <area>0,0,100%,55</area>
                    <shape name="background" from="basecontrolbackground">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <shape name="itemseparator"/>
                    <textarea name="title">
                        <scroll direction="horizontal" />
                        <cutdown>no</cutdown>
                        <alpha>255</alpha>
                    </textarea>
                </state>
                <state name="inactive" from="active"/>
                <state name="selectedinactive" from="selectedactive"/>
            </statetype>
        </buttonlist>

        <group name="imagedetails" from="musiccoverart"/>
        <group name="trackdetails" from="musictrackdetails"/>
        <group name="progressdetails" from="musicprogress" depends="title"/>
        <group name="playbackbuttons" from="musicbuttons"/>
        <group name="playbackstate" from="musicplaybackstate"/>
        <group name="playliststate" from="musicstate"/>
    </window>

    <!--====================================================================-->

    <window name="playlisteditorview_tree" include="music-base.xml">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundMusic.jpg</filename>
        </imagetype>
        <group name="decoration" from="baseeditordecoration"/>
        <textarea name="pagetitle" from="basepagetitletext">
            <value>Playlist Editor Tree</value>
        </textarea>

        <buttontree name="playlist_tree">
            <area>25,465,50%-25,-115</area>
            <numlists>1</numlists>
            <buttonlist name="listtemplate" from="baseitemlist">
                <statetype name="buttonitem">
                    <state name="inactive" from="active"/>
                    <state name="selectedinactive" from="selectedactive"/>
                </statetype>
            </buttonlist>
        </buttontree>

        <group name="imagedetails" from="musiccoverart"/>
        <group name="trackdetails" from="musictrackdetails"/>
        <group name="progressdetails" from="musicprogress"/>
        <group name="playbackbuttons" from="musicbuttons"/>
        <group name="playbackstate" from="musicplaybackstate"/>
        <group name="playliststate" from="musicstate"/>
    </window>

    <!--====================================================================-->

    <window name="playlisteditorview_gallery" include="music-base.xml">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundMusic.jpg</filename>
        </imagetype>
        <group name="decoration" from="baseeditordecoration"/>
        <textarea name="pagetitle" from="basepagetitletext">
            <value>Playlist Editor Gallery</value>
        </textarea>

        <buttontree name="playlist_tree">
            <area>25,465,1330,-115</area>
            <numlists>1</numlists>
            <buttonlist name="listtemplate">
                <buttonarea>0,0,100%,100%</buttonarea>
                <align>hcenter</align>
                <layout>grid</layout>
                <scrollstyle>free</scrollstyle>
                <wrapstyle>flowing</wrapstyle>
                <statetype name="buttonitem">
                    <area>0,0,165,165</area>
                    <state name="active">
                        <area>0,0,165,165</area>
                        <imagetype name="buttonimage">
                            <area>0,0,100%,100%</area>
                            <alpha>150</alpha>
                        </imagetype>
                        <statetype name="nodetype" from="musicnodetype">
                            <alpha>50</alpha>
                        </statetype>
                        <shape name="top" from="baseseparator_h">
                            <position>0,0</position>
                        </shape>
                        <shape name="bottom" from="baseseparator_h">
                            <position>0,100%</position>
                        </shape>
                    </state>
                    <state name="selectedactive">
                        <area>-17,-17,200,200</area>
                        <shape name="background" from="basebackground"/>
                        <imagetype name="buttonimage">
                            <area>0,0,100%,100%</area>
                            <preserveaspect>false</preserveaspect>
                            <alpha>255</alpha>
                        </imagetype>
                        <statetype name="nodetype" from="musicnodetype">
                            <alpha>150</alpha>
                        </statetype>
                        <shape name="blackframe" from="baseframe">
                            <area>-1,-1,100%+1,100%+1</area>
                            <type>box</type>
                            <fill color="#000000" alpha="0" />
                            <line color="#000000" alpha="255" width="3" />
                        </shape>
                        <shape name="whiteframe" from="baseframe">
                            <area>0,0,100%+1,100%+1</area>
                            <type>box</type>
                        </shape>
                    </state>
                </statetype>
            </buttonlist>
        </buttontree>

        <group name="trackdetails" from="musictrackdetails">
            <textarea name="playcount">
                <alpha>0</alpha>
            </textarea>
            <textarea name="lastplayed">
                <alpha>0</alpha>
            </textarea>
        </group>
        <group name="progressdetails" from="musicprogress">
        <area>50%+425,100%-247,-25,-115</area>
        </group>
        <group name="playbackbuttons" from="musicbuttons"/>
        <group name="playbackstate" from="musicplaybackstate"/>
        <group name="playliststate" from="musicstate"/>
    </window>

    <!--====================================================================-->

    <window name="editmetadata">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundMusic.jpg</filename>
        </imagetype>
        <group name="decoration" from="baseeditordecoration"/>
        <textarea name="pagetitle" from="basepagetitletext">
            <value>Edit Track Information</value>
        </textarea>
        <!-- content -->
        <group name="widgets">
            <area>50%-700,500,1400,-115</area>
            <group name="labels">
                <area>0,0,350,100%</area>
                <textarea name="titlelabel" from="basetext_m">
                    <area>0,0,100%,40</area>
                    <value>Title:</value>
                </textarea>
                <textarea name="artistlabel" from="basetext_m">
                    <area>0,65,100%,40</area>
                    <value>Artist:</value>
                </textarea>
                <textarea name="compilationlabel" from="basetext_m">
                    <area>0,130,100%,40</area>
                    <value>Compilation:</value>
                </textarea>
                <textarea name="compartistlabel" from="basetext_m">
                    <area>0,195,100%,40</area>
                    <value>Comp. Artist:</value>
                </textarea>
                <textarea name="albumlabel" from="basetext_m">
                    <area>0,260,100%,40</area>
                    <value>Album:</value>
                </textarea>
                <textarea name="genrelabel" from="basetext_m">
                    <area>0,325,100%,40</area>
                    <value>Genre:</value>
                </textarea>
                <textarea name="ratinglabel" from="basetext_m">
                    <area>0,390,100%,40</area>
                    <value>Rating:</value>
                </textarea>
            </group>
            <group name="controls">
                <area>350,0,100%,100%</area>
                <spinbox name="tracknumspin" from="basespinbox">
                    <area>0,0,100,40</area>
                </spinbox>
                <textedit name="titleedit" from="basetextedit">
                    <area>125,0,100%-225,40</area>
                </textedit>
                <textedit name="artistedit" from="basetextedit">
                    <area>125,65,100%-225,40</area>
                </textedit>
                <button name="searchartistbutton" from="basebutton">
                    <area>100%-200,65,100%,40</area>
                    <value>Search</value>
                </button>
                <checkbox name="compilationcheck" from="basecheckbox">
                    <area>125,130,40,40</area>
                </checkbox>
                <textedit name="compartistedit" from="basetextedit">
                    <area>125,195,100%-225,40</area>
                </textedit>
                <button name="searchcompartistbutton" from="basebutton">
                    <area>100%-200,195,100%,40</area>
                    <value>Search</value>
                </button>
                <spinbox name="yearspin" from="basespinbox">
                    <area>0,260,100,40</area>
                </spinbox>
                <textedit name="albumedit" from="basetextedit">
                    <area>125,260,100%-225,40</area>
                </textedit>
                <button name="searchalbumbutton" from="basebutton">
                    <area>100%-200,260,100%,40</area>
                    <value>Search</value>
                </button>
                <textedit name="genreedit" from="basetextedit">
                    <area>125,325,100%-225,40</area>
                </textedit>
                <button name="searchgenrebutton" from="basebutton">
                    <area>100%-200,325,100%,40</area>
                    <value>Search</value>
                </button>
                <spinbox name="ratingspin" from="basespinbox">
                    <area>0,390,100,40</area>
                </spinbox>
                <statetype name="ratingstate" from="basestarrating">
                    <position>125,395</position>
                </statetype>
            </group>
        </group>
        <!-- bottom part with buttons -->
        <button name="albumartbutton" from="basebutton">
            <area>50%-225,100%-65,200,40</area>
            <value>Album Art</value>
        </button>
        <button name="donebutton" from="basebutton">
            <area>50%+25,100%-65,200,40</area>
            <value>Done</value>
        </button>
    </window>

    <!--====================================================================-->

    <window name="volume_popup">
        <area>-1,0,750,200</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-250" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <group name="decoration" from="basepopupdecoration"/>
        <textarea name="title" from="basepopuptitletext">
            <value>Volume</value>
        </textarea>
        <textarea name="volume" from="basetext_m">
            <area>50,75,-50,40</area>
            <align>center</align>
        </textarea>
        <statetype name="mutestate" from="musicmutestate">
            <!-- <position>100%-100,75</position> -->
            <area>100%-82,80,32,32</area>
        </statetype>
        <progressbar name="volumeprogress" from="baseprogress_s">
            <area>50,135,-50,12</area>
        </progressbar>
    </window>

</mythuitheme>
