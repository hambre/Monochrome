<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="weatherbase">
        <group name="decoration" from="basewindowdecoration">
            <imagetype name="pagebackground" from="basedefaultbackground"/>
        </group>
        <textarea name="header" from="basepagetitletext"/>
        <textarea name="update_text" from="basehelptext">
            <area>25,150,-25,50</area>
            <align>center</align>
            <alpha>150</alpha>
        </textarea>
        <textarea name="pause_text" from="basetext_s">
            <area>25,100%-50,250,50</area>
            <alpha>150</alpha>
        </textarea>
    </window>

    <!--====================================================================-->

    <window name="screen-setup">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundWeather.jpg</filename>
        </imagetype>
        <group name="decoration" from="baseeditordecoration"/>
        <textarea name="title" from="basepagetitletext">
            <value>Screen Setup</value>
        </textarea>
        <group name="left">
            <area>100,465,50%-150,-210</area>
            <textarea name="inactivehdr" from="baselabeltext">
                <area>0,0,100%,40</area>
            </textarea>
            <buttonlist name="inactivelist" from="baseitemlist">
                <area>0,65,100%,100%</area>
            </buttonlist>
        </group>
        <group name="right">
            <area>50%+50,465,-100,-210</area>
            <textarea name="activehdr" from="baselabeltext">
                <area>0,0,100%,40</area>
            </textarea>
            <buttonlist name="activelist" from="baseitemlist">
                <area>0,65,100%,100%</area>
            </buttonlist>
        </group>
        <textarea name="helptxt" from="basehelptext">
            <area>50%-500,100%-210,1000,110</area>
        </textarea>
        <!-- bottom part with buttons -->
        <button name="finishbutton" from="basebutton">
            <area>50%-100,100%-65,200,40</area>
            <value>Finish</value>
        </button>
    </window>

    <!--====================================================================-->

    <window name="setup-location">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundWeather.jpg</filename>
        </imagetype>
        <group name="decoration" from="basecontentdecoration"/>
        <textarea name="title" from="basepagetitletext">
            <value>Location Search</value>
        </textarea>
        <group name="content">
            <area>50%-500,500,1000,-150</area>
            <textarea name="labellocation" from="baselabeltext">
                <area>0,0,300,40</area>
                <value>Enter Location:</value>
            </textarea>
            <textedit name="loc-edit" from="basetextedit">
                <area>325,0,-125,40</area>
            </textedit>
            <button name="searchbtn" from="basesearchbutton">
                <position>100%-100,0</position>
            </button>
            <buttonlist name="results" from="baseitemlist">
                <area>0,90,100%,100%</area>
            </buttonlist>
        </group>
        <textarea name="helptext" from="basehelptext">
            <area>50%-500,100%-130,1000,70</area>
            <value>Enter your current location, nearest large town or city. In some countries postal codes are also supported.</value>
        </textarea>
        <textarea name="numresults" from="basetext_s">
            <area>25,100%-50,500,50</area>
            <alpha>150</alpha>
        </textarea>
        <textarea name="source" from="basetext_s">
            <area>100%-525,100%-50,-25,50</area>
            <align>right,vcenter</align>
            <alpha>150</alpha>
        </textarea>
    </window>

    <!--====================================================================-->

    <window name="Three Day Forecast">
        <textarea name="3dlocation" from="basetext_l">
            <area>50%-250,100,500,40</area>
            <align>center</align>
        </textarea>
        <textarea name="updatetime" from="basetext_s" depends="!update_text">
            <area>25,150,-25,50</area>
            <align>center</align>
            <alpha>150</alpha>
        </textarea>
        <group name="days">
            <area>50%-650,50%-200,1300,500</area>
            <group name="day-0">
                <area>0,0,400,100%</area>
                <textarea name="date-0" from="basetext_m">
                    <area>0,0,100%,40</area>
                    <align>center</align>
                    <alpha>200</alpha>
                </textarea>
                <imagetype name="icon-0">
                    <area>0,65,100%,-150</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <textarea name="labelhigh-0" from="baselabeltext">
                    <area>50%-100,100%-105,100,40</area>
                    <value>High</value>
                </textarea>
                <textarea name="high-0" from="basetext_m">
                    <area>50%+25,100%-105,100%,40</area>
                    <value>~</value>
                </textarea>
                <textarea name="labellow-0" from="baselabeltext">
                    <area>50%-100,100%-40,100,40</area>
                    <value>Low</value>
                </textarea>
                <textarea name="low-0" from="basetext_m">
                    <area>50%+25,100%-40,100%,40</area>
                    <value>~</value>
                </textarea>
            </group>
            <group name="day-1">
                <area>50%-200,0,400,100%</area>
                <textarea name="date-1" from="basetext_m">
                    <area>0,0,100%,40</area>
                    <align>center</align>
                    <alpha>200</alpha>
                </textarea>
                <imagetype name="icon-1">
                    <area>0,65,100%,-150</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <textarea name="labelhigh-1" from="baselabeltext">
                    <area>50%-100,100%-105,100,40</area>
                    <value>High</value>
                </textarea>
                <textarea name="high-1" from="basetext_m">
                    <area>50%+25,100%-105,100%,40</area>
                    <value>~</value>
                </textarea>
                <textarea name="labellow-1" from="baselabeltext">
                    <area>50%-100,100%-40,100,40</area>
                    <value>Low</value>
                </textarea>
                <textarea name="low-1" from="basetext_m">
                    <area>50%+25,100%-40,100%,40</area>
                    <value>~</value>
                </textarea>
            </group>
            <group name="day-2">
                <area>100%-400,0,400,100%</area>
                <textarea name="date-2" from="basetext_m">
                    <area>0,0,100%,40</area>
                    <align>center</align>
                    <alpha>200</alpha>
                </textarea>
                <imagetype name="icon-2">
                    <area>0,65,100%,-150</area>
                    <preserveaspect>true</preserveaspect>
                </imagetype>
                <textarea name="labelhigh-2" from="baselabeltext">
                    <area>50%-100,100%-105,100,40</area>
                    <value>High</value>
                </textarea>
                <textarea name="high-2" from="basetext_m">
                    <area>50%+25,100%-105,100%,40</area>
                    <value>~</value>
                </textarea>
                <textarea name="labellow-2" from="baselabeltext">
                    <area>50%-100,100%-40,100,40</area>
                    <value>Low</value>
                </textarea>
                <textarea name="low-2" from="basetext_m">
                    <area>50%+25,100%-40,100%,40</area>
                    <value>~</value>
                </textarea>
            </group>
        </group>
        <textarea name="copyright" from="basetext_s">
            <area>50%-500,100%-50,1000,50</area>
            <align>center</align>
            <alpha>150</alpha>
        </textarea>
        <imagetype name="copyrightlogo">
            <area>50%-550,100%-41,32,32</area>
            <preserveaspect>true</preserveaspect>
        </imagetype>
    </window>
</mythuitheme>
