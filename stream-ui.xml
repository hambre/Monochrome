<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="streamview" include="music-base.xml">
        <imagetype name="background" from="baseimagebackground">
            <filename>images/Backgrounds/BackgroundRadio.jpg</filename>
        </imagetype>
        <group name="decoration" from="baseeditordecoration"/>
        <textarea name="pagetitle" from="basepagetitletext">
            <value>Stream View</value>
        </textarea>

        <textarea name="nostreams" from="basetext_m">
            <area>100,465,-100,-115</area>
            <align>center</align>
            <value>Press MENU to add some radio streams to play.</value>
        </textarea>

        <buttonlist name="streamlist" from="baseitemlist">
            <area>25,465,50%-25,280</area>
            <statetype name="buttonitem">
                <area>0,0,100%,55</area>
                <state name="active">
                    <area>0,0,100%,55</area>
                    <shape name="itemseparator" from="baseitemseparator_h">
                        <position>0,100%</position>
                    </shape>
                    <textarea name="station" from="baseitemtext">
                        <template>%STATION% ~ %CHANNEL% ~ %GENRE%</template>
                        <area>5,0,-45,100%</area>
                        <alpha>100</alpha>
                    </textarea>
                    <statetype name="playstate">
                        <area>100%-37,50%-16,32,32</area>
                        <state name="playing">
                            <imagetype name="animation">
                                <area>0,0,100%,100%</area>
                                <filepattern low="1" high="8">images/icons/animated/Spinner%1.png</filepattern>
                                <delay>75</delay>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <state name="selectedactive" from="active">
                    <area>0,0,100%,55</area>
                    <shape name="background" from="basecontrolbackground">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <shape name="itemseparator"/>
                    <textarea name="station">
                        <scroll direction="horizontal" />
                        <cutdown>no</cutdown>
                        <alpha>255</alpha>
                    </textarea>
                </state>
                <state name="inactive" from="active">
                </state>
                <state name="selectedinactive" from="selectedactive">
                    <shape name="background">
                        <alpha>0</alpha>
                    </shape>
                </state>
            </statetype>
        </buttonlist>

        <buttonlist name="playedtrackslist" from="baseitemlist">
            <area>50%+25,465,-25,280</area>
            <statetype name="buttonitem">
                <area>0,0,100%,55</area>
                <state name="active">
                    <area>0,0,100%,55</area>
                    <shape name="itemseparator" from="baseitemseparator_h">
                        <position>0,100%</position>
                    </shape>
                    <textarea name="tracknum" from="basetext_m">
                        <area>5,0,50,100%</area>
                        <alpha>100</alpha>
                    </textarea>
                    <textarea name="title" from="baseitemtext">
                        <template>%ARTIST% ~ %TITLE%</template>
                        <area>80,0,-100,100%</area>
                        <alpha>100</alpha>
                    </textarea>
                    <textarea name="length" from="basetext_m">
                        <area>100%-100,0,-5,100%</area>
                        <align>right,vcenter</align>
                        <alpha>100</alpha>
                    </textarea>
                    <statetype name="playstate">
                        <area>100%-37,50%-16,32,32</area>
                        <state name="playing">
                            <imagetype name="animation">
                                <area>0,0,100%,100%</area>
                                <filepattern low="1" high="8">images/icons/animated/Spinner%1.png</filepattern>
                                <delay>75</delay>
                            </imagetype>
                        </state>
                    </statetype>
                </state>
                <state name="selectedactive" from="active">
                    <area>0,0,100%,55</area>
                    <shape name="background" from="basecontrolbackground">
                        <area>0,0,100%,100%</area>
                    </shape>
                    <shape name="itemseparator"/>
                    <textarea name="tracknum">
                        <alpha>255</alpha>
                    </textarea>
                    <textarea name="title">
                        <scroll direction="horizontal" />
                        <cutdown>no</cutdown>
                        <alpha>255</alpha>
                    </textarea>
                    <textarea name="length">
                        <alpha>255</alpha>
                    </textarea>
                </state>
                <state name="inactive" from="active">
                </state>
                <state name="selectedinactive" from="selectedactive">
                    <shape name="background">
                        <alpha>0</alpha>
                    </shape>
                </state>
            </statetype>
        </buttonlist>

        <group name="trackdetails">
            <area>50%-500,100%-320,1000,200</area>
            <group name="coverart" from="musiccoverart">
                <area>0,0,200,200</area>
                <imagetype name="icon">
                    <area>20%,20%,80%,80%</area>
                </imagetype>
            </group>

            <group name="musictrackdetails">
                <area>250,0,100%,100%</area>
                <textarea name="title" from="basetitletext">
                    <area>0,0,100%,50</area>
                </textarea>
                <textarea name="artist" from="basetext_l">
                    <area>0,60,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="channel" from="basetext_m">
                    <area>0,115,100%,40</area>
                    <template>%STATION% ~ %CHANNEL%</template>
                    <alpha>150</alpha>
                </textarea>
                <textarea name="url" from="basetext_m">
                    <area>0,165,100%,40</area>
                    <alpha>150</alpha>
                </textarea>
            </group>
        </group>

        <!-- buffer detail in left side of footer -->
        <group name="bufferdetails">
            <area>25,100%-77,500,64</area>
            <textarea name="bufferstatus" from="basetext_s">
                <area>0,5,100%,30</area>
                <alpha>150</alpha>
                <align>center</align>
                <font>basefont_xs</font>
            </textarea>
            <progressbar name="bufferprogress" from="baseprogress_s">
                <area>0,40,100%,12</area>
            </progressbar>
        </group>

        <!-- playback buttons -->
        <group name="musicbuttons">
            <area>50%-112,100%-77,224,64</area>
            <button name="stop" from="musicstopbutton">
                <position>0,0</position>
            </button>
            <button name="play" from="musicplaybutton">
                <position>80,0</position>
            </button>
            <button name="pause" from="musicpausebutton">
                <position>160,0</position>
            </button>
        </group>

        <statetype name="mutestate" from="musicmutestate">
            <position>100%-58,100%-61</position>
        </statetype>

    </window>
</mythuitheme>
