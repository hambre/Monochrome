    <window name="progdetails">
        <group name="pageheader" from="baseheader" />
        <group name="pagefooter" from="basefooter" />
        <textarea name="pagetitle" from="basetitletext">
            <value>Program Details:</value>
        </textarea>
        <webbrowser name="browser">
            <area>50,75,-30,-120</area>
            <browserarea>0,0,100%-30,100%-30</browserarea>
            <zoom>1.0</zoom>
            <background color="#000000"/>
            <scrollbar name="vertscrollbar" from="basescrollbar_v">
