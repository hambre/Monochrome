<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>
    <window name="themechooser">
        <imagetype name="background" from="basedefaultbackground"/>
        <imagetype name="background" from="baseimagebackground">
            <filename>tmp/Backgrounds/colors-DSC08818_resized.jpg</filename>
        </imagetype>
        <group name="decoration" from="basecontentdecoration"/>
        <textarea name="pagetitle" from="basepagetitletext">
            <value>Theme Chooser</value>
        </textarea>
        <buttonlist name="themes" from="baseitemlist">
            <area>25,500,600,-75</area>
        </buttonlist>
        <imagetype name="preview">
            <area>675,500,640,360</area> 
            <preserveaspect>yes</preserveaspect>
        </imagetype>
        <textarea name="description" from="basetext_s">
            <area>675,885,-25,-75</area>
            <multiline>yes</multiline>
            <alpha>150</alpha>
        </textarea>
        <group name="details">
            <area>1365,500,-25,360</area>
            <textarea name="name" from="basetext_m">
                <area>0,0,100%,50</area>
            </textarea>
            <textarea name="version" from="basetext_s">
                <area>0,65,100%,40</area>
                <alpha>150</alpha>
            </textarea>
            <textarea name="resolution" from="basetext_s">
                <area>0,130,100%,40</area>
                <alpha>150</alpha>
            </textarea>
            <textarea name="aspect" from="basetext_s">
                <area>0,195,100%,40</area>
                <alpha>150</alpha>
            </textarea>
            <textarea name="authorname" from="basetext_s">
                <area>0,260,100%,40</area>
                <alpha>150</alpha>
            </textarea>
            <textarea name="authoremail" from="basetext_s">
                <area>0,325,100%,40</area>
                <alpha>150</alpha>
            </textarea>
        </group>
        <progressbar name="downloadprogressbar" from="baseprogress_s">
            <area>675,100%-30,640,12</area>
        </progressbar>
        <statetype name="fullpreviewstate">
            <area>0,0,100%,100%</area>
            <state name="fullscreen">
                <area>0,0,100%,100%</area>
                <imagetype name="fullscreenpreview">
                    <area>0,0,100%,100%</area>
                </imagetype>
            </state>
        </statetype>
    </window>
</mythuitheme>
