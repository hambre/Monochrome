<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "http://www.mythtv.org/schema/mythuitheme.dtd">
<mythuitheme>

    <window name="watchrecordings">

        <imagetype name="fanart" from="baseimagebackground"/>
        <group name="pageheader" from="baseheader" />
        <group name="content" from="basecontent" />
        <group name="pagefooter" from="basefooter" />

        <textarea name="pagetitle" from="basetitletext">
            <value>Watch Recordings</value>
        </textarea>

        <!-- add hidden rec_count widget so we can depend on it -->
        <textarea name="rec_count"></textarea>

        <!-- recordings list -->
        <buttonlist name="recordings" from="baseitemlist">
            <align>top,hcenter</align>
            <layout>vertical</layout>
            <area>25,500,700,525</area>
            <buttonarea>0,0,700,505</buttonarea>
            <showarrow>no</showarrow>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <arrange>fixed</arrange>
            <showarrow>no</showarrow>
            <statetype name="buttonitem">
                <area>0,0,700,50</area>
                <state name="active">
                    <textarea name="titlesubtitle" from="baseitemtext">
                        <area>5,0,-5,100%</area>
                        <alpha>100</alpha>
                        <template>%TITLE| %%~ |00x00| %%~ |SUBTITLE%</template>
                    </textarea>
                    <statetype name="playlist">
                        <state name="yes">
                            <imagetype name="icon" from="baseicon">
                                <area>710,12,32,32</area>
                                <filename>images/icons/Playlist.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <statetype name="jobstate" from="basejobstate">
                        <position>710,0</position>
                    </statetype>
                </state>
                <state name="selectedactive">
                    <textarea name="titlesubtitle" from="baseitemtext">
                        <area>5,0,660,100%</area>
                        <scroll direction="horizontal" />
                        <alpha>255</alpha>
                        <cutdown>no</cutdown>
                        <template>%TITLE| %%~ |00x00| %%~ |SUBTITLE%</template>
                    </textarea>
                    <statetype name="watched">
                        <state name="yes">
                            <imagetype name="icon" from="baseicon">
                                <area>668,12,32,32</area>
                                <filename>images/icons/Watched.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <statetype name="playlist">
                        <state name="yes">
                            <imagetype name="icon" from="baseicon">
                                <area>710,12,32,32</area>
                                <filename>images/icons/Playlist.png</filename>
                            </imagetype>
                        </state>
                    </statetype>
                    <statetype name="jobstate" from="basejobstate">
                        <position>710,0</position>
                    </statetype>
                </state>
            </statetype>
        </buttonlist>

        <!-- recording groups list -->
        <buttonlist name="groups" from="baseitemlist">
            <align>top,hcenter</align>
            <layout>vertical</layout>
            <area>25,500,750,505</area>
            <buttonarea>0,0,750,505</buttonarea>
            <showarrow>no</showarrow>
            <scrollstyle>free</scrollstyle>
            <wrapstyle>items</wrapstyle>
            <arrange>fixed</arrange>
            <showarrow>no</showarrow>
        </buttonlist>

        <!-- selected recording details -->
        <group name="recdetails" depends="!rec_count">
            <area>800, 500, 1120, 580</area>
            <imagetype name="coverart">
                <area>0, 0, 350, 505</area>
            </imagetype>
            <shape name="previewframe" depends="!coverart">
                <type>box</type>
                <area>0, 0, 350, 505</area>
                <fill style="gradient">
                    <gradient direction="vertical">
                        <stop position="0"   color="#FFFFFF" alpha="75" />
                        <stop position="30"   color="#FFFFFF" alpha="75" />
                        <stop position="100" color="#FFFFFF" alpha="25" />
                    </gradient>
                </fill>
            </shape>
            <imagetype name="preview" depends="!coverart">
                <area>0, 0, 350, 200</area>
                <preserveaspect>yes</preserveaspect>
            </imagetype>
            <imagetype name="banner">
                <area>0, 425, 350, 100</area>
                <preserveaspect>yes</preserveaspect>
            </imagetype>
            <textarea name="title" from="basetext_l">
                <area>400, 0, 700, 50</area>
            </textarea>
            <textarea name="subtitle" from="basetext_m">
                <area>400, 45, 700, 50</area>
		<alpha>150</alpha>
                <template>%00x00| ~ %%SUBTITLE%</template>
            </textarea>
            <group name="smalldescription" depends="subtitle">
                <textarea name="description" from="basetext_s">
                    <area>400, 110, 700, 260</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="largedescription" depends="!subtitle">
                <textarea name="description" from="basetext_s">
                    <area>400, 60, 700, 320</area>
                    <multiline>yes</multiline>
                    <align>justify</align>
                    <cutdown>yes</cutdown>
                    <alpha>150</alpha>
                </textarea>
            </group>
            <group name="facts">
                <area>400,400,700,120</area>
                <imagetype name="sender" from="baseicon">
                    <area>0,0,32,32</area>
                    <filename>images/icons/Sender.png</filename>
                </imagetype>
                <textarea name="longchannel" from="basetext_xs">
                    <area>50,0,650,32</area>
                    <alpha>150</alpha>
                </textarea>
                <imagetype name="aried" from="baseicon">
                    <area>0,40,32,32</area>
                    <filename>images/icons/Clock.png</filename>
                </imagetype>
                <textarea name="startdate" from="basetext_xs">
                    <area>50,40,650,32</area>
                    <alpha>150</alpha>
                    <template>%startdate%%| year%, %starttime% - %endtime% (%lenmins%)</template>
                </textarea>
                <imagetype name="storage" from="baseicon">
                    <area>0,80,32,32</area>
                    <filename>images/icons/Storage.png</filename>
                </imagetype>
                <textarea name="storagegroup" from="basetext_xs">
                    <area>50,80,650,32</area>
                    <alpha>150</alpha>
                    <template>%filesize_str% of %storagegroup% Storage</template>
                </textarea>
            </group>
            <textarea name="category" from="basetext_s">
                <area>0,530,350,50</area>
                <align>center</align>
                <alpha>150</alpha>
                <case>capitaliseall</case>
            </textarea>

            <statetype name="audioprops">
                <area>400,540,100,32</area>
                <showempty>yes</showempty>
                <state name="stereo">
                    <imagetype name="stereo" from="baseicon">
                        <area>0,0,80,32</area>
                        <filename>images/icons/AudioStereo.png</filename>
                    </imagetype>
                </state>
                <state name="surround">
                    <imagetype name="surround" from="baseicon">
                        <area>0,0,80,32</area>
                        <filename>images/icons/AudioSurround.png</filename>
                    </imagetype>
                </state>
                <state name="dolby">
                    <imagetype name="dolby" from="baseicon">
                        <area>0,0,80,32</area>
                        <filename>images/icons/AudioDolby.png</filename>
                    </imagetype>
                </state>
                <state name="mono">
                    <imagetype name="mono" from="baseicon">
                        <area>0,0,80,32</area>
                        <filename>images/icons/AudioMono.png</filename>
                    </imagetype>
                </state>
                <state name="default">
                    <imagetype name="default" from="baseicon">
                        <area>0,0,80,32</area>
                        <alpha>100</alpha>
                        <filename>images/icons/AudioDefault.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="videoprops">
                <area>500,540,100,32</area>
                <state name="hdtv">
                    <imagetype name="hdtv" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/VideoHDTV.png</filename>
                    </imagetype>
                </state>
                <state name="widescreen">
                    <imagetype name="widescreen" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/VideoWidescreen.png</filename>
                    </imagetype>
                </state>
                <state name="avchd">
                    <imagetype name="avchd" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/VideoAVCHD.png</filename>
                    </imagetype>
                </state>
                <state name="hd720">
                    <imagetype name="hd720" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/VideoHD720.png</filename>
                    </imagetype>
                </state>
                <state name="hd1080">
                    <imagetype name="hd1080" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/VideoHD1080.png</filename>
                    </imagetype>
                </state>
                <state name="damaged">
                    <textarea name="damaged" from="basetext_s">
                        <area>0,0,100,32</area>
                        <value>Damaged</value>
                    </textarea>
                </state>
                <state name="default">
                    <imagetype name="default" from="baseicon">
                        <area>0,0,100,32</area>
                        <alpha>100</alpha>
                        <filename>images/icons/VideoSD.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="subtitletypes">
                <area>600,540,100,32</area>
                <state name="cc">
                    <imagetype name="sub" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/SubCC.png</filename>
                    </imagetype>
                </state>
                <state name="subtitles">
                    <imagetype name="sub" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/SubNormal.png</filename>
                    </imagetype>
                </state>
                <state name="onscreensub">
                    <imagetype name="sub" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/SubOSD.png</filename>
                    </imagetype>
                </state>
                <state name="deafsigned">
                    <imagetype name="sub" from="baseicon">
                        <area>0,0,100,32</area>
                        <filename>images/icons/SubSDH.png</filename>
                    </imagetype>
                </state>
                <state name="default">
                    <imagetype name="sub" from="baseicon">
                        <area>0,0,100,32</area>
                        <alpha>100</alpha>
                        <filename>images/icons/SubNormal.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="bookmark">
                <area>725,540,32,32</area>
                <state name="yes">
                    <imagetype name="bookmark" from="baseicon">
                        <area>0,0,32,32</area>
                        <filename>images/icons/Bookmark.png</filename>
                    </imagetype>
                </state>
                <state name="no">
                    <imagetype name="bookmark" from="baseicon">
                        <area>0,0,32,32</area>
                        <alpha>50</alpha>
                        <filename>images/icons/Bookmark.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="commflagged">
                <area>775,540,32,32</area>
                <state name="yes">
                    <imagetype name="commflagged" from="baseicon">
                        <area>0,0,32,32</area>
                        <filename>images/icons/CommFlag.png</filename>
                    </imagetype>
                </state>
                <state name="no">
                    <imagetype name="commflagged" from="baseicon">
                        <area>0,0,32,32</area>
                        <alpha>50</alpha>
                        <filename>images/icons/CommFlag.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="cutlist">
                <area>825,540,32,32</area>
                <state name="yes">
                    <imagetype name="cutlist" from="baseicon">
                        <area>0,0,32,32</area>
                        <filename>images/icons/Cutlist.png</filename>
                    </imagetype>
                </state>
                <state name="no">
                    <imagetype name="cutlist" from="baseicon">
                        <area>0,0,32,32</area>
                        <alpha>50</alpha>
                        <filename>images/icons/Cutlist.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <statetype name="autoexpire">
                <area>875,540,32,32</area>
                <state name="yes">
                    <imagetype name="autoexpire" from="baseicon">
                        <area>0,0,32,32</area>
                        <filename>images/icons/Expire.png</filename>
                    </imagetype>
                </state>
                <state name="no">
                    <imagetype name="autoexpire" from="baseicon">
                        <area>0,0,32,32</area>
                        <alpha>50</alpha>
                        <filename>images/icons/Expire.png</filename>
                    </imagetype>
                </state>
            </statetype>
            <!-- this animation is needed to keep the animation within the buttonlist running -->
            <imagetype name="triggeranimation">
                <area>925,540,32,32</area>
                <alpha>0</alpha>
                <filepattern low="1" high="8">images/icons/animated/Recording%1.png</filepattern>
                <delay>75</delay>
            </imagetype>
        </group>

        <!-- selected group details -->
        <group name="groupdetails" depends="rec_count">
            <area>800, 500, 1120, 505</area>
            <textarea name="title" from="basetext_l">
                <area>210, 150, 700, 50</area>
            </textarea>
            <textarea name="description" from="basetext_m">
                <area>210, 225, 700, 455</area>
                <multiline>yes</multiline>
                <align>justify</align>
                <cutdown>yes</cutdown>
                <alpha>150</alpha>
            </textarea>
        </group>

        <!-- used storage space detail in left side of footer -->
        <group name="storagedetails">
            <area>25,1038,700,35</area>
            <progressbar name="usedbar" from="baseprogress">
                <area>0,0,100%,100%</area>
            </progressbar>
            <textarea name="freereport" from="basetext_xs">
                <area>0,0,100%,100%</area>
                <alpha>200</alpha>
                <align>center</align>
                <font>basefont_xxs</font>
            </textarea>
        </group>

    </window>

    <window name="groupfilter">
        <area>-1,0,600,450</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-450" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-450" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="label" from="basepopuptitletext"/>
        </group>
        <buttonlist name="groups" from="baseitemlist">
            <area>50,75,-50,-25</area>
        </buttonlist>
    </window>

    <window name="changeview">
        <area>-1,0,550,500</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-400" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-400" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Change Displayed Groups</value>
            </textarea>
        </group>
        <group name="content">
            <area>100,80,-100,-25</area>
            <textarea name="labeltitles" from="basetext_s">
                <area>25,0,200,40</area>
                <alpha>200</alpha>
                <value>Titles</value>
            </textarea>
            <checkbox name="titles" from="basecheckbox">
                <position>300,10</position>
            </checkbox>
            <textarea name="labelcategories" from="basetext_s">
                <area>25,50,200,40</area>
                <alpha>200</alpha>
                <value>Categories</value>
            </textarea>
            <checkbox name="categories" from="basecheckbox">
                <position>300,60</position>
            </checkbox>
            <textarea name="labelrecgroups" from="basetext_s">
                <area>25,100,200,40</area>
                <alpha>200</alpha>
                <value>Groups</value>
            </textarea>
            <checkbox name="recgroups" from="basecheckbox">
                <position>300,110</position>
            </checkbox>
            <textarea name="labelwatchlist" from="basetext_s">
                <area>25,150,200,40</area>
                <alpha>200</alpha>
                <value>Watchlist</value>
            </textarea>
            <checkbox name="watchlist" from="basecheckbox">
                <position>300,160</position>
            </checkbox>
            <textarea name="labelsearches" from="basetext_s">
                <area>25,200,200,40</area>
                <alpha>200</alpha>
                <value>Searches</value>
            </textarea>
            <checkbox name="searches" from="basecheckbox">
                <position>300,210</position>
            </checkbox>
            <textarea name="labellivetv" from="basetext_s">
                <area>25,250,200,40</area>
                <alpha>200</alpha>
                <value>Live TV</value>
            </textarea>
            <checkbox name="livetv" from="basecheckbox">
                <position>300,260</position>
            </checkbox>
            <textarea name="labelwatched" from="basetext_s">
                <area>25,300,200,40</area>
                <alpha>200</alpha>
                <value>Watched</value>
            </textarea>
            <checkbox name="watched" from="basecheckbox">
                <position>300,310</position>
            </checkbox>
            <button name="save" from="basebutton">
                <area>100,380,-100,40</area>
                <value>Save</value>
            </button>
        </group>
    </window>

    <window name="passwordchanger">
        <area>-1,0,750,250</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-250" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-250" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Change Recording Group Password</value>
            </textarea>
        </group>
        <group name="content">
            <area>50,90,-50,165</area>
            <textarea name="oldlabel" from="basetext_s">
                <area>0,0,300,30</area>
                <value>Old Password:</value>
                <alpha>200</alpha>
            </textarea>
            <textedit name="oldpassword" from="basetextedit">
                <area>300,0,-1,32</area>
            </textedit>
            <textarea name="newlabel" from="basetext_s">
                <area>0,50,300,30</area>
                <value>New Password:</value>
                <alpha>200</alpha>
            </textarea>
            <textedit name="newpassword" from="basetextedit">
                <area>300,50,-1,32</area>
            </textedit>
            <button name="ok" from="basebutton">
                <area>175,125,-175,40</area>
                <value>OK</value>
            </button>
        </group>
    </window>

    <window name="groupselector">
        <area>-1,0,750,500</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-460" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-460" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="label" from="basepopuptitletext"/>
        </group>
        <buttonlist name="groups" from="baseitemlist">
            <area>50,75,-50,-25</area>
        </buttonlist>
    </window>

    <window name="iconhelp">
        <area>-1,0,600,460</area>
        <animation trigger="AboutToShow">
            <section duration="500" centre="middle">
                <position start="-1,-460" end="-1,0" easingcurve="OutBack" />
            </section>
        </animation>
        <animation trigger="AboutToHide">
            <section duration="500" centre="middle">
                <position start="-1,-1" end="-1,-460" easingcurve="InBack" />
            </section>
        </animation>
        <group name="header" from="basepopupheader">
            <area>0,-50,100%,100%</area>
            <textarea name="title" from="basepopuptitletext">
                <value>Status Icon Help</value>
            </textarea>
        </group>
        <buttonlist name="iconlist" from="baseitemlist">
            <area>50,75,-50,-25</area>
            <statetype name="buttonitem">
                <area>0,0,100%,40</area>
                <state name="active">
                    <statetype name="icons">
                        <area>0,0,40,40</area>
                        <state name="processing">
                            <imagetype name="animation">
                                <area>20,4,32,32</area>
                                <filepattern low="1" high="8">images/icons/animated/CommFlagging%1.png</filepattern>
                                <delay>75</delay>
                            </imagetype>
                        </state>
                        <!-- recording states -->
                        <state name="watched">
                            <imagetype name="watched" from="baseicon">
                                <area>20,4,32,32</area>
                                <filename>images/icons/Watched.png</filename>
                            </imagetype>
                        </state>
                        <state name="bookmark">
                            <imagetype name="bookmark" from="baseicon">
                                <area>20,4,32,32</area>
                                <filename>images/icons/Bookmark.png</filename>
                            </imagetype>
                        </state>
                        <state name="autoexpire">
                            <imagetype name="autoexpire" from="baseicon">
                                <area>20,4,32,32</area>
                                <filename>images/icons/Expire.png</filename>
                            </imagetype>
                        </state>
                        <state name="commflagged">
                            <imagetype name="commflagged" from="baseicon">
                                <area>20,4,32,32</area>
                                <filename>images/icons/CommFlag.png</filename>
                            </imagetype>
                        </state>
                        <state name="cutlist">
                            <imagetype name="cutlist" from="baseicon">
                                <area>20,4,32,32</area>
                                <filename>images/icons/Cutlist.png</filename>
                            </imagetype>
                        </state>
                        <!-- audio -->
                        <state name="stereo">
                            <imagetype name="stereo" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/AudioStereo.png</filename>
                            </imagetype>
                        </state>
                        <state name="surround">
                            <imagetype name="surround" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/AudioSurround.png</filename>
                            </imagetype>
                        </state>
                        <state name="dolby">
                            <imagetype name="dolby" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/AudioDolby.png</filename>
                            </imagetype>
                        </state>
                        <state name="mono">
                            <imagetype name="mono" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/AudioMono.png</filename>
                            </imagetype>
                        </state>
                        <!-- video -->
                        <state name="hdtv">
                            <imagetype name="hdtv" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/VideoHDTV.png</filename>
                            </imagetype>
                        </state>
                        <state name="widescreen">
                            <imagetype name="widescreen" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/VideoWidescreen.png</filename>
                            </imagetype>
                        </state>
                        <state name="avchd">
                            <imagetype name="avchd" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/VideoAVCHD.png</filename>
                            </imagetype>
                        </state>
                        <state name="hd720">
                            <imagetype name="hd720" from="baseicon">
                                <area>0,4,75,32</area>
                                <filename>images/icons/VideoHD720.png</filename>
                            </imagetype>
